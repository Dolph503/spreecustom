            console.error("Failed to convert image to base64:", err);
            alert("Failed to load image from gallery.");
            return;
            }
        }
        const img = new Image();
        img.crossOrigin = "anonymous";
        img.onload = function () {
            const fabricImage = new fabric.Image(img, {
            left: 100,
            top: 100,
            selectable: true,
            hasControls: true,
            hasBorders: true,
            });
            if (typeof callback === "function") {
