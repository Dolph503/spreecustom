    window.loadImageToFabric = async function (source, callback) {
        const isBase64 = /^data:image\/(png|jpeg|jpg|gif|webp);base64,/.test(source);
        let base64Source = source;
        if (!isBase64) {
            try {
            base64Source = await toBase64(source);
