    function deepSanitize(obj, seen = new WeakSet()) {
        if (obj === null || typeof obj !== 'object') return obj;
        if (seen.has(obj)) return undefined; // prevent circular reference

        seen.add(obj);

        const result = Array.isArray(obj) ? [] : {};
        for (const key in obj) {
            if (!Object.prototype.hasOwnProperty.call(obj, key)) continue;

            const value = obj[key];

            if (typeof value === 'function') continue; // skip functions

            try {
            result[key] = deepSanitize(value, seen);
            } catch (e) {
            result[key] = undefined; // fallback if fails
            }
        }
        return result;
    }
function getSafeFabricObject(obj) {
    if (typeof obj?.toObject === 'function') {
        // Add "src" so fabric.Image includes it in the serialized object
        return obj.toObject([
            'id', 'name', 'color', 'thumbnail', 'inputType', 'controlType',
            'min', 'max', 'isVisible', 'textTransform', 'options', 'src'
        ]);
    } else {
        return deepSanitize(obj);
    }
