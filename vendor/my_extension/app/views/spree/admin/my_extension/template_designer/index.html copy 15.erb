            fabric.Image.fromURL(dataURL, function (img) {
            // img.selectable = true;
            img.scaleToWidth(img.width);
            img.scaleToHeight(img.height);
            img.left = (window.canvas.width - img.width) / 2;
            img.top = (window.canvas.height - img.height) / 2;

