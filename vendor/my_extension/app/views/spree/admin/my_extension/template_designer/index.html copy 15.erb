<script type="text/javascript">
  document.addEventListener("DOMContentLoaded", function () {
    // First, load fonts
    function loadFonts() {
      return fetch('/admin/font')
        .then(response => response.json())
        .then(fonts => {
          window.fonts = fonts;
          const loadPromises = fonts.map(font => {
            const fontName = font.name;
            const fontUrl = font.url;
            const newFont = new FontFace(fontName, `url(${fontUrl})`);
            return newFont.load().then(loadedFace => {
              document.fonts.add(loadedFace);
            }).catch(err => {
              console.error(`Failed to load font "${fontName}":`, err);
            });
          });
          return Promise.all(loadPromises); // Wait for all fonts to load
        })
        .catch(error => {
          console.error('Error loading fonts:', error);
        });
    }

    // Then, load design
    function loadTemplateDesign() {
      <% if params[:id].present? %>
        fetch('/admin/templates/<%= params[:id] %>')
          .then(response => {
            if (!response.ok) throw new Error("Failed to fetch design.");
            return response.json();
          })
          .then(data => {
            window.selectedTemplate = data;
            loadDesign(data.data);
          })
          .catch(error => {
            console.error('Error fetching design:', error);
            alert("Failed to fetch design.");
          });
      <% end %>
    }

    // Chain: fonts first, then design
    loadFonts().then(() => {
      loadTemplateDesign();
    });
  });
</script>


