                    const matchId = controlToMatch.mainImage?.id || '';
                    isShow = condition.logic === "=="
                        ? matchId === condition.value
                        : matchId !== condition.value;
                } else {
                    const matchText = controlToMatch.text || '';
                    isShow = condition.logic === "=="
