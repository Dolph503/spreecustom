<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
<head>
  <%= render "spree/admin/shared/head" %>
  <%= render "spree/admin/shared/custom_head" %>
</head>

<body class="admin min-vh-100 <%= controller_name %> <%= action_name %>">
<%= render_admin_partials(:body_start_partials) %>

<%= render "spree/admin/shared/header" %>
<% unless request.path.include?("design-template") %>
  <%= render "spree/admin/shared/sidebar" %>
<% end %>
<main id="<%= request.path.include?('design-template') ? '' : 'content' %>">

  <%= render "spree/admin/shared/content_header" %>
 <div class="<%= request.path.include?('design-template') ? 'container-fluid' : 'container' %>">
    <%= yield %>
  </div>
  <div data-controller="hello">
  </div>
  <%= render "spree/admin/shared/footer" %>
</main>
<%= render "spree/admin/shared/modal" %>
<%= render "spree/admin/shared/alerts" %>

<%= render_admin_partials(:body_end_partials) %>
</body>
</html>